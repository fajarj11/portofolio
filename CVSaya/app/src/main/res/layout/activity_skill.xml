<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    android:layout_height="match_parent"
    tools:context=".Skill">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/skil"
            android:scaleType="fitXY"
            android:layout_marginBottom="20dp"
            android:layout_height="200dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:id="@+id/skill"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Android"
                        android:id="@+id/android"
                        android:layout_marginRight="32dp"
                        android:layout_height="wrap_content" />
                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/android"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:max="100"
                        android:minHeight="20dp"
                        android:layout_marginRight="26dp"
                        android:minWidth="200dp"
                        android:progress="48" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/progressBar"
                        android:text="48%"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="PHP"
                        android:id="@+id/php"
                        android:layout_marginRight="54dp"
                        android:layout_height="wrap_content" />
                    <ProgressBar
                        android:id="@+id/progressBar2"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/php"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:max="100"
                        android:minHeight="20dp"
                        android:layout_marginRight="25dp"
                        android:minWidth="200dp"
                        android:progress="50" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/progressBar2"
                        android:text="50%"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="HTML"
                        android:id="@+id/html"
                        android:layout_marginRight="44dp"
                        android:layout_height="wrap_content" />
                    <ProgressBar
                        android:id="@+id/progressBar3"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/html"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:max="100"
                        android:minHeight="20dp"
                        android:layout_marginRight="25dp"
                        android:minWidth="200dp"
                        android:progress="65" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/progressBar3"
                        android:text="65%"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Java Script"
                        android:id="@+id/js"
                        android:layout_marginRight="13dp"
                        android:layout_height="wrap_content" />
                    <ProgressBar
                        android:id="@+id/progressBar4"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/js"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:max="100"
                        android:minHeight="20dp"
                        android:layout_marginRight="25dp"
                        android:minWidth="200dp"
                        android:progress="45" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/progressBar4"
                        android:text="45%"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="CSS"
                        android:id="@+id/css"
                        android:layout_marginRight="58dp"
                        android:layout_height="wrap_content" />
                    <ProgressBar
                        android:id="@+id/progressBar5"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/css"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:max="100"
                        android:minHeight="20dp"
                        android:layout_marginRight="25dp"
                        android:minWidth="200dp"
                        android:progress="65" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/progressBar5"
                        android:text="65%"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Design"
                        android:id="@+id/design"
                        android:layout_marginRight="40dp"
                        android:layout_height="wrap_content" />
                    <ProgressBar
                        android:id="@+id/progressBar6"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/design"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:max="100"
                        android:minHeight="20dp"
                        android:layout_marginRight="25dp"
                        android:minWidth="200dp"
                        android:progress="70" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/progressBar6"
                        android:text="70%"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Laravel"
                        android:id="@+id/laravel"
                        android:layout_marginRight="37dp"
                        android:layout_height="wrap_content" />
                    <ProgressBar
                        android:id="@+id/progressBar7"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/laravel"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:max="100"
                        android:minHeight="20dp"
                        android:layout_marginRight="25dp"
                        android:minWidth="200dp"
                        android:progress="58" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/progressBar7"
                        android:text="58%"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Codeigniter"
                        android:id="@+id/ci"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content" />
                    <ProgressBar
                        android:id="@+id/progressBar8"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/ci"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:max="100"
                        android:minHeight="20dp"
                        android:layout_marginRight="25dp"
                        android:minWidth="200dp"
                        android:progress="30" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/progressBar8"
                        android:text="30%"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        app:headerLayout="@layout/header"
        android:id="@+id/nav_view"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        android:layout_height="match_parent">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>